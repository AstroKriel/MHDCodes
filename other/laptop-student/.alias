## ~/.alias
eval "echo 'Source-ing: .alias...'"


## ======== COMMAND SHORTCUTS ========
## ===================================

## list contents in directory
alias lsl="ls -lGH"
alias lst="ls -lGHt"

## view long column-formated files
alias less="less -S"

## python notebooks
alias py="python"
alias nb="jupyter notebook"

## render whitespace in terminal
alias whitespace="sed 's/ /·/g;s/\t/￫/g;s/\r/§/g;s/$/¶/g'"


## ======== SSH SHORTCUTS ========
## ===============================

## ssh to Gadi
alias GADI="ssh -Y gadi"

## ssh to MSO (head-node) / Avatar GPUe node
alias AVA="ssh avatar"
alias AVAG="ssh avatargpu"


## ======== HOME DIRECTORY ========
## ================================
export HOME=/Users/necoturb
alias dhome="cd $HOME"


## ======== USEFUL REPOSITORIES ========
## =====================================

## parent directory
export CODES=$HOME/Documents/Codes/
alias dcodes="cd $CODES"

## MHD python package
export MHDCodes=$CODES/MHDCodes
export MHDPackage=$MHDCodes/TheMHDPackage

alias dmhd="cd $MHDCodes"

## Quokka directory
export QK=$CODES/Quokka
alias dqk="cd $QK"

## AMReX (root) directory
export AMReX_ROOT=$QK/extern/amrex
alias damrex="cd $AMReX_ROOT"

## laptop essentials
export LAP=$HOME/Documents/Essentials
alias dlap="cd $LAP"


## ======== FREQUENTLY VISITED DIRECTORIES ========
## ================================================

## vscode setting.json file directory
export VSJSON="$HOME/Library/Application\ Support/Code/User"
alias dvs="cd $VSJSON"

## bin folder
export BIN=$HOME/bin
alias dbin="cd $BIN"

## desktop folder
export DESK=$HOME/Desktop
alias ddesk="cd $desk"

## downloads folder
export DWN=$HOME/Downloads
alias ddwn="cd $DWN"

## projects directory
export PROJ=$HOME/Documents/Projects
alias dproj="cd $PROJ"

## dynamo directory
export DYNO=$HOME/Documents/Studies/Dynamo
alias ddyno="cd $DYNO"

## phd directory
export PHD=$HOME/Documents/Studies/PhD
alias dphd="cd $PHD"


## END OF ALIAS